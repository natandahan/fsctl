{
  "name": "natan-cli",
  "version": "1.0.0",
  "description": "Simple CLI Tool for Full Stack development Day to day tasks",
  "main": "dist/cli.js",
  "scripts": {
    "tsc": "tsc",
    "start": "node .",
    "clean": "rimraf dist/*",
    "build": "npm-run-all clean lint tsc",
    "test": "jest --coverage",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "dev": "nodemon --watch src -e ts --exec npm-run-all build start"
  },
  "keywords": [
    "CLI",
    "SDK",
    "Full Stack",
    "Development",
    "TypeScript"
  ],
  "author": "Natan Dahan",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@types/winston": "^2.4.4",
    "jest": "^26.5.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "jest": {
    "rootDir": "src",
    "testPathIgnorePatterns": ["/node_modules/"],
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$"
  }
}
